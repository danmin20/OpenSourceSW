extends layout

block content
  .timeline
    form#good-form(action='/good' method='post' enctype='multipart/form-data')
      .input-group
        label(for='good-name' style='font-size:20px') 상품명
        input#good-name(name='name' style='font-family:Yeon Sung; font-size:18px')
      .input-group
        label(for='good-photo' style='font-size:20px') 상품 사진
        input#good-photo(type='file' name='img' style='height:50px; font-family:Yeon Sung; font-size:18px')
      .input-group
        label(for='good-price' style='font-size:20px') 시작 가격
        input#good-price(type='number' name='price' style='font-family:Yeon Sung; font-size:18px')
      button#join-btn.btn(type='submit' mar style="font-family:Yeon Sung; font-size:20px") 등록하기
